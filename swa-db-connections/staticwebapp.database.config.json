        }
      },
      "permissions": [
        {
          "actions": ["read", "filter"],
          "role": "anonymous"
        }
      ],
      "rest": {
        "methods": ["get"],
        "enabled": true
      },
      "graphql": {
        "enabled": true
      },
      "mappings": {
        "사업장명": "사업장명",
        "companyName": "사업장명",
        "시도": "시도",
        "sido": "시도",
        "구군": "구군",
